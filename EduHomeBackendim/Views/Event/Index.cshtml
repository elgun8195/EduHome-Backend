@model IEnumerable<EventDetail>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_EvLayout.cshtml";
}

<!-- Banner Area Start -->
		<div class="banner-area-wrapper">
            <div class="banner-area text-center">	
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="banner-content-wrapper">
                                <div class="banner-content">
                                    <h2>event</h2> 
                                </div> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
		<!-- Banner Area End -->

                <!-- Event Start -->
        <div class="event-area three text-center pt-150 pb-150">
            <div class="container">
                <div class="row">
              @foreach (var item in Model.Take(7))
            {
                      <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="single-event mb-60">
                            <div class="event-img">
                                <a asp-controller="event" asp-action="detail" asp-route-id="@item.Id">
                                    <img src="~/img/event/@item.Image" alt="event">
                                    <div class="course-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                                <div class="event-date">
                                    <h3>@item.EndTime.ToString("dd") <span>@item.EndTime.ToString("MMMM")</span></h3>  
                                </div>
                            </div>
                            <div class="event-content text-left">
                                <h4><a asp-controller="event" asp-action="detail" asp-route-id="@item.Id">ADVANCE PHP WORKSHOP</a></h4>
                                <ul>
                                    <li><span>time:</span>@item.StartTime.ToString("hh:mm tt") -@item.StartTime.ToString("hh:mm tt")</li>
                                    <li><span>venue</span> @item.Location</li>
                                </ul>
                                <div class="event-content-right">
                                    <a class="default-btn" asp-controller="event" asp-action="detail" asp-route-id="@item.Id">join now</a>
                                </div>
                            </div>
                        </div>
                    </div>


            }


               @foreach (var item in Model.Skip(7).Take(2))
            {
                     <div class="col-md-4 col-sm-6 hidden-xs">
                        <div class="single-event">
                            <div class="event-img">
                                <a asp-controller="event" asp-action="detail" asp-route-id="@item.Id">
                                    <img src="img/event/@item.Image" alt="event">
                                    <div class="course-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                                <div class="event-date">
                                    <h3>@item.EndTime.ToString("dd") <span>@item.EndTime.ToString("MMMM")</span></h3>  
                                </div>
                            </div>
                            <div class="event-content text-left">
                                <h4><a asp-controller="event" asp-action="detail" asp-route-id="@item.Id">@item.Title</a></h4>
                                <ul>
                                    <li><span>time:</span>@item.StartTime.ToString("hh:mm tt") -@item.StartTime.ToString("hh:mm tt")</li>
                                    <li><span>venue</span> @item.Location</li>
                                </ul>
                                <div class="event-content-right">
                                    <a class="default-btn" asp-controller="event" asp-action="detail" asp-route-id="@item.Id">join now</a>
                                </div>
                            </div>
                        </div>
                    </div>
            }
                </div>
            </div>
        </div>      
        <!-- Event End -->



<partial name="_SubscribePartial"/>