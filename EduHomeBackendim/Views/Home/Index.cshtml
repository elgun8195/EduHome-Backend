@model HomeVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Background Area Start -->
<section id="slider-container" class="slider-area">


    <div class="slider-owl owl-theme owl-carousel">
        @foreach (Slider item in Model.Slider)
        {
            <!-- Start Slingle Slide -->
            <div class="single-slide item" style="background-image: url(img/slider/@item.ImageUrl)">
                <!-- Start Slider Content -->
                <div class="slider-content-area">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-7 col-md-offset-left-5">
                                <div class="slide-content-wrapper">
                                    <div class="slide-content">
                                        @Html.Raw(item.Title)
                                        <p>@item.Subtitle</p>
                                        <a class="default-btn" href="about.html">Learn more</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Start Slider Content -->
            </div>
        }
    </div>
</section>

<!-- Background Area End -->
<!-- Notice Start -->
<section class="notice-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left">
                    <h3>notice board</h3>
                    @if (Model.Notice.Count() > 0)
                    {
                        @foreach (var item in Model.Notice)
                        {

                            <div class="single-notice-left pb-70">
                                <h4>@item.Date.ToString("dddd, dd MMMM yyyy")</h4>
                                <p>@item.Title </p>
                            </div>
                        }
                    }
                    else
                    {
                        <h1>No Data Here</h1>
                    }
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right">
                    @if (Model.NoticeAds.Count() > 0)
                    {
                        @foreach (var item in Model.NoticeAds)
                        {
                            <div class="single-notice-right mb-25 pb-25">
                                <h3>@item.Title</h3>
                                <p> @item.Subtitle</p>
                            </div>
                        }
                    }
                    else
                    {
                        <h1>No Data Here</h1>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
<!-- Choose Start -->
<section class="choose-area pb-85 pt-77">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-left-4 col-sm-8 col-md-offset-left-4">
                <div class="choose-content text-left">
                    <h2>@Model.WhyChoose.Title</h2>
                    <p> @Model.WhyChoose.Subtitle</p>
                    <p class="choose-option">@Model.WhyChoose.Descript </p>
                    <a class="default-btn" href="course-details.html">view courses</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Choose Area End -->
<!-- Courses Area Start -->
<div class="courses-area pt-150 text-center">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="img/icon/section.png" alt="section-title">
                    <h2>COURSES WE OFFER</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @if (Model.CourseOffers.Count() > 0)
            {

                @foreach (var item in Model.CourseOffers)
                {
                    <div class="col-md-4 hidden-sm col-xs-12">
                        <div class="single-course">
                            <div class="course-img">
                                <a href="course-details.html">
                                    <img src="~/img/course/@item.ImageUrl" alt="course">
                                    <div class="course-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                            </div>
                            <div class="course-content">
                                <h3><a href="course-details.html">@item.Title</a></h3>
                                <p>@item.Subtitle</p>
                                <a class="default-btn" href="course-details.html">read more</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <h1>No Data Here</h1>
            }
        </div>
    </div>
</div>
<!-- Courses Area End -->
<!-- Event Area Start -->
<div class="event-area one text-center pt-140 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="img/icon/section.png" alt="section-title">
                    <h2>UPCOMMING EVENTS</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-12 col-xs-12">
                @if (Model.Events.Count() > 0)
                {
                    @foreach (var item in Model.Events.Take(4))
                    {
                        <div class="single-event mb-35">
                            <div class="event-date">
                                <h3><a href="event-details.html">@item.EndTime.ToString("dd") <span>@item.EndTime.ToString("MMMM")</span></a></h3>
                            </div>
                            <div class="event-content text-left">
                                <div class="event-content-left">
                                    <h4><a href="event-details.html">@item.Title</a></h4>
                                    <ul>
                                        <li><i class="fa fa-clock-o"></i>@item.StartTime.ToString("hh:mm tt") -@item.StartTime.ToString("hh:mm tt")</li>
                                        <li><i class="fa fa-map-marker"></i>@item.Location</li>
                                    </ul>
                                </div>
                                <div class="event-content-right">
                                    <a class="default-btn" href="event-details.html">join now</a>
                                </div>
                            </div>
                        </div>

                    }
                }
                else
                {
                    <h1>No Data Here</h1>
                }
            </div>
            <div class="col-md-6 hidden-sm hidden-xs">
                @if (Model.Events.Count() > 0)
                {
                    @foreach (var item in Model.Events.Skip(4).Take(4))
                    {
                        <div class="single-event mb-35">
                            <div class="event-date">
                                <h3><a href="event-details.html">@item.EndTime.ToString("dd") <span>@item.EndTime.ToString("MMMM")</span></a></h3>
                            </div>
                            <div class="event-content text-left">
                                <div class="event-content-left">
                                    <h4><a href="event-details.html">@item.Title</a></h4>
                                    <ul>
                                        <li><i class="fa fa-clock-o"></i>@item.StartTime.ToString("hh:mm tt") -@item.StartTime.ToString("hh:mm tt")</li>
                                        <li><i class="fa fa-map-marker"></i>@item.Location</li>
                                    </ul>
                                </div>
                                <div class="event-content-right">
                                    <a class="default-btn" href="event-details.html">join now</a>
                                </div>
                            </div>
                        </div>

                    }
                }
                else
                {
                    <h1>No Data Here</h1>
                }
            </div>
        </div>
    </div>
</div>
<!-- Event Area End -->
<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            <div class="testimonial-owl owl-theme owl-carousel">
                <div class="col-md-8 col-md-offset-2 col-sm-12">
                    <div class="single-testimonial">
                        <div class="testimonial-info">
                            <div class="testimonial-img">
                                <img src="~/img/testimonial/@Model.Testimonial.Image" alt="testimonial">
                            </div>
                            <div class="testimonial-content">
                                <p>@Model.Testimonial.Title</p>
                                <h4>@Model.Testimonial.Name</h4>
                                <h5>@Model.Testimonial.Position</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Blog Area Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/img/icon/section.png" alt="section-title">
                    <h2>LATEST FROM BLOG</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @if (Model.Blogs.Count() > 0)
            {
                @foreach (var item in Model.Blogs)
                {
                    <div class="col-md-4 col-sm-6 col-xs-12">
                        <div class="single-blog">
                            <div class="blog-img">
                                <a href="blog-details.html"><img src="~/img/blog/@item.Image" alt="blog"></a>
                                <div class="blog-hover">
                                    <a href="blog-details.html"><i class="fa fa-link"></i></a>
                                </div>
                            </div>
                            <div class="blog-content">
                                <div class="blog-top">
                                    <p>@item.Author  /  @item.WriteTime.ToString("MMMM dd  yyyy")  /  <i class="fa fa-comments-o"></i> @item.CommentCount</p>
                                </div>
                                <div class="blog-bottom">
                                    <h2><a href="blog-details.html">@item.Title</a></h2>
                                    <a href="blog-details.html">read more</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <h1>No Data Here</h1>
            }
        </div>
    </div>
</div>
<!-- Blog Area End -->
<!-- Subscribe Start -->
<partial name="_SubscribePartial" />
<!-- Subscribe End -->