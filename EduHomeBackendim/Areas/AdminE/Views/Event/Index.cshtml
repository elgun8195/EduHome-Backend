@model IEnumerable<Event>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminE/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
   
}
@if (Model.Count() > 0)
{


    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Event Table</h4>
                    <p class="card-description">
                        <a asp-controller="event" asp-action="Create" class="btn btn-primary">Create</a>
                        <a asp-controller="event" asp-action="DeleteAll" class="btn btn-danger">Delete All Data!!</a>
                        <div class="table-responsive">

                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Count</th>
                                        <th>StartTime</th>
                                        <th>EndTime</th>
                                        <th>Title</th>
                                        <th>Location</th>
                                        <th>Setting</th>
                                    </tr>
                                </thead>
                                <tbody>



                                    @foreach (var Model in Model)
                                    {
                                         count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@Model.StartTime</td>
                                            <td>@Model.EndTime</td>
                                            <td>@Model.Title</td>
                                            <td>@Model.Location</td>
                                            <td>
                                                <a class="btn btn-danger" asp-controller="Event" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                                                <a class="btn btn-dark" asp-controller="Event" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                                                <a class="btn btn-success" asp-controller="Event" asp-action="Detail" asp-route-id="@Model.Id">Detail</a>

                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>

                        </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <a asp-controller="event" asp-action="Create" class="btn btn-primary">Create</a>
    <h1>Bosdu</h1>
}