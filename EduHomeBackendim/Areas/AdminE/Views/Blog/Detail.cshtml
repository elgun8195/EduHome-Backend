@model Blog

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/AdminE/Views/Shared/_AdminLayout.cshtml";
}



@if (Model!=null)
{
    

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blog Table</h4>
                <p class="card-description">
                    <div class="table-responsive">

                        <table class="table">
                            <thead>
                                <tr>
                                     <th>Count</th>
                                    <th>Image</th>
                                    <th>Title</th>
                                    <th>Author</th>
                                    <th>WriterTime</th>
                                    <th>Comments</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><img style="width:200px;height:50px;" src="~/img/blog/@Model.Image" /></td>
                                    <td>@Model.Title</td>
                                    <td>@Model.Author</td>
                                    <td>@Model.WriteTime</td>
                                    <td>@Model.CommentCount</td>                                   
                                </tr>
                            </tbody>
                        </table>
                         <a asp-controller="blog" asp-action="index" class="btn btn-primary">Back</a>
                    </div>
            </div>
        </div>
    </div>
</div>
}
else{
    <h1>Bosdu</h1>
}
