@model CourseOffer
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminE/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col=md-12">
             <form class="forms-sample" method="post" enctype="multipart/form-data">
                   <div class="form-group" >
                      <label asp-for="Photo">Photo</label>
                      <input asp-for="Photo"  class="form-control"   accept="image/*">
                      <span asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group" >
                      <label asp-for="Title">Author</label>
                      <input asp-for="Title"  class="form-control"  placeholder="Title">
                      <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                      <label asp-for="Subtitle">Title</label>
                      <input asp-for="Subtitle"  class="form-control"  placeholder="Subtitle">
                      <span asp-validation-for="Subtitle"></span>
                    </div> 
                    <button type="submit" class="btn btn-primary mr-2">Create</button>
                    <a asp-controller="course" asp-action="Index" class="btn btn-primary">Back</a>
                  </form>
        </div>
       
    </div>
</div>