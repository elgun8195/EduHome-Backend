@model Testimonial
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminE/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    count++;
}
@if (Model!=null)
{
    

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Testimonial Table</h4>
                <p class="card-description">
                    <a asp-controller="Testimonial" asp-action="Create" class="btn btn-primary">Create</a>
                    <a asp-controller="Testimonial" asp-action="DeleteAll" class="btn btn-danger">Delete All Data!!</a>
                    <div class="table-responsive">

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Count</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Title</th>
                                    <th>Position</th>
                                    <th>Setting</th>
                                </tr>
                            </thead>
                            <tbody>



                                <tr>
                                    <td>@count</td>
                                    <td><img style="width:200px;height:50px;" src="~/img/testimonial/@Model.Image" /></td>
                                    <td>@Model.Name</td>
                                    <td>@Model.Title</td>
                                    <td>@Model.Position</td>
                                    <td>
                                        <a class="btn btn-danger" asp-controller="Testimonial" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                                        <a class="btn btn-dark" asp-controller="Testimonial" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                                        <a class="btn btn-success" asp-controller="Testimonial" asp-action="Detail" asp-route-id="@Model.Id">Detail</a>

                                    </td>
                                </tr>


                            </tbody>
                        </table>

                    </div>
            </div>
        </div>
    </div>
</div>
}
else{
     <a asp-controller="Testimonial" asp-action="Create" class="btn btn-primary">Create</a>
    <h1>Bosdu</h1>
}